#!/bin/sh

## Assumptions
#
# * pwd is the instantiation directory
# * $HIPERMARK_LIB_DIR contains shared data
# * $HIPERMARK_IMPLEMENTATION points to the APL-source directory


NAME=blacksch
cat $HIPERMARK_LIB_DIR/apl/dyalog-prelude.apl $HIPERMARK_IMPLEMENTATION/../tail/$NAME.apl > dyalog-$NAME.apl
cp $HIPERMARK_IMPLEMENTATION/run-dyalog run
